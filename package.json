{
    "name": "egglog-language",
    "version": "0.0.1",
    "author": "hatoo",
    "license": "MIT",
    "description": "A tiny programming language that supports Language Server Protocol",
    "engines": {
        "vscode": "^1.75.0"
    },
    "main": "./extension.js",
    "contributes": {
        "languages": [
            {
                "id": "egglog",
                "extensions": [
                    ".egg"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "egglog",
                "scopeName": "source.egglog",
                "path": "./syntaxes/egglog.tmLanguage.json"
            }
        ]
    },
    "dependencies": {
        "vscode-languageclient": "^8.1.0"
    },
    "private": true
}